<div class="h1 text-center">Employees Status</div>

<div class="container">
    <table class="table text-white table-dark table-striped table-bordered border-info">
        <thead>
            <tr>
                <th scope="col">Index</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Nick Name</th>
                <th scope="col">Code</th>
                <th scope="col">Department</th>
                <th scope="col">Phone</th>
                <th scope="col">Company</th>
                <th scope="col">Work status</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            <% @employees.each do |employee|%>
                <tr>
                    <td><%= employee.id %></td>
                    <td><%= employee.firstName %></td>
                    <td><%= employee.lastName %></td>
                    <td><%= employee.nickName %></td>
                    <td><%= employee.code %></td>
                    <td><%= employee.department %></td>
                    <td><%= employee.phone %></td>
                    <td><%= employee.company %></td>
                    <td>
                        <% if employee.deleteStatus == false %>
                            <div class="font-monospace">Still working</div>
                        <% end %>
                    </td>
                    <td><%= link_to "Edit", edit_employee_path(employee.id), class: "no-underline btn btn-outline-warning" %></td>
                    <td><%= link_to "Delete", employee_path(employee.id), class: "no-underline btn btn-outline-danger", 
                        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="container">
    <%= link_to "New Employee", new_employee_path,  class: "btn btn-outline-primary"%>
</div>