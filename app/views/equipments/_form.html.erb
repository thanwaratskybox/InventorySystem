<div class="container">
    <%= form_with model: @equipment, url: equipments_path do |form| %>
        <div class="row">

            <div>
                <%= form.label :itemName %>
                <%= form.text_field :itemName, placeholder: "Item name" %>
                <% @equipment.errors.full_messages_for(:itemName).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>

            <div>
                <%= form.label :serialNumber %>
                <%= form.text_field :serialNumber, placeholder: "Serial number" %>
                <% @equipment.errors.full_messages_for(:serialNumber).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>

            <div>
                <%= form.label :itemType %>
                <%= form.text_field :itemType, placeholder: "Item type" %>
                <% @equipment.errors.full_messages_for(:itemType).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
            
            <div>
                <%= form.label :status %>
                <%= form.text_field :status, placeholder: "Status"%>
                <% @equipment.errors.full_messages_for(:status).each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>

            <div>
                <%= form.label :amount %>
                <%= form.text_field :amount, placeholder: "Amount" %>
                <% @equipment.errors.full_messages_for(:amount).each do |message|%>
                    <div><%= message %></div>
                <% end %>
            </div>

        </div>
    <% end %>
</div>